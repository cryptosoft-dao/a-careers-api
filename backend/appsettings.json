{
  // Change port here if 5000 is already occupied
  "Kestrel:Endpoints:Http:Url": "http://localhost:5000",

  "BackendOptions": {

    // Master contract address (user-friendly bounceable format)
    "MasterAddress": "",

    // Put relative or absolute path here, as you wish
    // Directory must be writable (will create additional files)
    "DatabaseFile": "./backend.sqlite",

    // Writable directory for non-critical cache data (no need to backup)
    "CacheDirectory": "./cache",

    // How often force-check for new NFT Items (using get_collection_data call)
    "NewOrdersDetectorInterval": "00:15:00",

    // How often check for new tx in collection contract
    "CollectionTxTrackingInterval": "00:00:30",

    // How often check for new tx in master contract
    "MasterTxTrackingInterval": "00:00:10",

    // How often force-check Order updates queue
    "OrderUpdateCheckerInterval": "00:05:00",

    // How often force-reload Order data into search cache
    "SearchCacheForceReloadInterval": "00:05:00",

    // Maximum number of rows (items) that 'search' can return
    "SearchMaxCount": 100,

    // TonApi host names
    "TonApiMainnetEndoint": "https://tonapi.io",
    "TonApiTestnetEndoint": "https://testnet.tonapi.io",

    "Categories": {
      "turnkey-project": "Turnkey project",
      "smart-contracts": "Development of smart contracts",
      "bots-and-web-apps": "Development of bots and web apps",
      "websites-and-de-frontend": "Creation of websites and decentralized frontend",
      "backend-and-blockchain-interactions": "Backend and interaction with blockchain",
      "ux-ui-graphic-design-and-3d": "UX/UI design, graphic design, 3D",
      "frontend": "Frontend development",
      "nft": "Development and minting of NFT",
      "texts-documentation-copywriting": "Writing texts, documentation, copywriting"
    }
  },

  // I don't think you'll ever need to change this
  "TonOptions": {
    "UseMainnet": true,
    "VerbosityLevel": 0,
    "LogTextLimit": 1500
  },

  // Logging settings
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "TonLibDotNet.TonClient": "Information",
      "RecurrentTasks": "Debug",
      "RecurrentTasks.TaskRunner<SomeDAO.Backend.Services.CollectionTxTrackerService>": "Warning",
      "RecurrentTasks.TaskRunner<SomeDAO.Backend.Services.MasterTxTrackerService>": "Warning",
      "Microsoft": "Information",
      "Microsoft.AspNetCore": "Warning",
      "System": "Warning",
      "System.Net.Http.HttpClient": "Warning"
    }
  },

  // Do not change unless you already know you should
  "AllowedHosts": "*"
}
